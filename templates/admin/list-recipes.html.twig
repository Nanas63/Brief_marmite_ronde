{% extends 'base-admin.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


		<h1>Toutes les recettes</h1>
		<div class="row g-5">


			{% for recipe in recipes %}


				<div class="col-md-4 col-lg-4 col-sm-6">
					<div class="card h-100">
						<img src="{{recipe.image}}" class="card-img-top object-fit-cover" style="height: 150px;" alt="photo de la recette.">
						<div class="card-body">
							<h5 class="card-title">{{recipe.title}}</h5>
							<p class="card-difficult">
								 :{{recipe.category.level}}</p>
						</p>
						<p
							class="card-user">{# difficulté :{{recipe.user.name}} #}
						</p>

						<p class="card-duration">
							durée :{{recipe.duration}}mn</p>


						{# <p class="card-autor">Auteur :{{recipe.user_id}}</p> #}


						<a href="{{path('one_recipe',{'id' : recipe.id})}}" class="btn btn-warning">Voir</a>
					</div>
				</div>
			</div>


		{% endfor %}


</div>{% endblock %}
